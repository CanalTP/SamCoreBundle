{% extends '::base.html.twig' %}

{% block left_menu -%}
    {% include 'CanalTPSamCoreBundle:Client:left_menu.html.twig' %}
{% endblock %}

{% block main_content %}

    <h1>{{ title|trans }}</h1>
    <hr/>


    {{ form_start(form, { 'style': 'horizontal' }) }}
        {{ form_row(form.name) }}

        {% if (logoPath is not empty) %}
            <p><img src="{{ logoPath }}" class="logo-client-medium" alt="{{ client.name }} logo"/></p>
        {% endif %}
        {{ form_row(form.file) }}

        {{ form_row(form.navitiaToken) }}

        {{ form_row(form.applications) }}

        <div class="form-group row">
        {{ form_label(form.perimeters) }}
            <div class="col-lg-10 perimeters" data-prototype="{{ include('CanalTPSamCoreBundle:Client:_perimeter-prototype.html.twig', { 'perimeter': form.perimeters.vars.prototype})|e }}">
            {% for perimeter in form.perimeters %}
                {% include "CanalTPSamCoreBundle:Client:_perimeter-prototype.html.twig" with {'form': perimeter} %}
            {% endfor %}
            </div>
        </div>

        {{ form_widget(form._token) }}
        <button id="add-perimeter" type="submit" class="btn btn-default">{{ 'form.save'|trans }}</button>

    <hr/>

    <script>
        require(['sam/form/perimeter'], function(perimeterForm){
            perimeterForm.init();
        });
    </script>

{% endblock %}
